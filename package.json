{
  "name": "foodkit",
  "version": "1.0.0",
  "description": "Foodkit",
  "main": "index.js",
  "scripts": {
    "build:sass": "sass --watch ./src/sass/style.scss:./src/css/style.css",
    "watch:sass": "onchange -v ./src/sass/*.scss -- npm run build:scss",
    "start": "browser-sync -s -w",
    "watch:all": "npm-run-all --parallel start watch:sass"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Margo1212/Foodkit.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Margo1212/Foodkit/issues"
  },
  "homepage": "https://github.com/Margo1212/Foodkit#readme",
  "devDependencies": {
    "sass": "^1.42.1"
  },
  "dependencies": {
    "browser-sync": "^2.27.5",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0"
  }
}
